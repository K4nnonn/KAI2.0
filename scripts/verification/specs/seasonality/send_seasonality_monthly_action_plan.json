{
  "id": "SEND_SEASONALITY_MONTHLY_ACTION_PLAN",
  "pillar": "quality",
  "kind": "send",
  "capabilities": ["chat_send", "seasonality", "actionability"],
  "request": {
    "message": "Build a month-by-month action plan for loyalty seasonality and FR intent clicks.",
    "session_id": "${SESSION_ID}",
    "customer_id": "${TARGET_CUSTOMER_ID}"
  },
  "expect": {
    "role": "assistant"
  },
  "assert": {
    "reply_min_len": 120,
    "regex_match": {
      "__body.reply": "(?is)(month|monthly|peak|low|budget|monitor|next step|evidence)"
    },
    "reply_not_contains": [
      "Range: LAST_30_DAYS",
      "No date specified",
      "router_no_route",
      "router_verify_failed",
      "Resolved account to"
    ]
  }
}

