{
  "id": "SEND_SEASONALITY_RECOMMENDATIONS",
  "pillar": "purpose",
  "kind": "send",
  "capabilities": ["chat_send", "seasonality", "decision_support"],
  "request": {
    "message": "Given seasonality for loyalty, what is your budget shift recommendation by month?",
    "session_id": "${SESSION_ID}",
    "customer_id": "${TARGET_CUSTOMER_ID}"
  },
  "expect": {
    "role": "assistant"
  },
  "intent_goal": {
    "response_paths": ["__body.reply"],
    "must_include_any": ["recommend", "shift", "budget", "month", "peak", "low", "monitor"],
    "min_any_matches": 2,
    "must_not_include": ["Range: LAST_30_DAYS", "No date specified"]
  },
  "assert": {
    "reply_min_len": 120,
    "reply_not_contains": ["Range: LAST_30_DAYS", "No date specified", "router_no_route", "router_verify_failed"],
    "regex_match": {
      "__body.reply": "(?is)(budget|shift|monitor|month)"
    }
  }
}

