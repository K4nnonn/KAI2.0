{
  "id": "SEND_PMAX_ACTIONABLE_NO_ACCOUNT_PROMPT",
  "pillar": "purpose",
  "kind": "send",
  "capabilities": ["chat_send", "pmax", "advisor_response"],
  "request": {
    "message": "Any quick wins for PMax placements? If you need data, ask for a placements export (not account IDs).",
    "ai_enabled": true,
    "session_id": "${SESSION_ID}"
  },
  "expect": {
    "role": "assistant"
  },
  "intent_goal": {
    "response_paths": ["__body.reply"],
    "must_include_any": ["pmax", "placement", "exclude", "waste", "mobileapp", "app"],
    "min_any_matches": 2,
    "must_not_include": ["pick an account", "paste an id", "confirm the account", "LAST_7_DAYS"]
  },
  "assert": {
    "reply_min_len": 120,
    "reply_not_contains": ["pick an account", "paste an id", "confirm the account", "LAST_7_DAYS"]
  }
}

