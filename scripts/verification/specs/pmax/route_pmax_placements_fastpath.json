{
  "id": "ROUTE_PMAX_PLACEMENTS_FASTPATH",
  "pillar": "intent",
  "kind": "route",
  "capabilities": ["routing", "pmax", "account_context"],
  "request": {
    "message": "Analyze my PMax placements",
    "customer_ids": [],
    "session_id": "${SESSION_ID}"
  },
  "expect": {
    "intent": "pmax",
    "tool": "pmax",
    "run_planner": false,
    "run_trends": false,
    "needs_ids": false
  },
  "intent_goal": {
    "intent_path": "intent",
    "allowed_intents": ["pmax"]
  },
  "assert": {
    "array_min_len": {
      "customer_ids": 1
    }
  },
  "metamorphic": [
    {
      "name": "greeting",
      "message": "Hey - Analyze my PMax placements",
      "expect_same": ["intent", "tool", "run_planner", "needs_ids", "customer_ids.0"]
    },
    {
      "name": "punctuation",
      "message": "Analyze my PMax placements??",
      "expect_same": ["intent", "tool", "run_planner", "needs_ids", "customer_ids.0"]
    }
  ]
}

