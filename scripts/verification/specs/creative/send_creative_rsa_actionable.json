{
  "id": "SEND_CREATIVE_RSA_ACTIONABLE",
  "pillar": "purpose",
  "kind": "send",
  "capabilities": ["chat_send", "creative", "advisor_response"],
  "request": {
    "message": "Write RSA headlines and descriptions for Shell Mobility loyalty focused on FR intent clicks.",
    "session_id": "${SESSION_ID}"
  },
  "expect": {
    "role": "assistant"
  },
  "intent_goal": {
    "response_paths": ["__body.reply"],
    "must_include_any": ["Creative draft", "Headlines:", "Descriptions:", "RSA", "headline", "description"],
    "min_any_matches": 3,
    "must_not_include": [
      "I couldn't reach the AI service",
      "router_verify_failed",
      "router_no_route",
      "pick an account",
      "paste an id",
      "confirm the account"
    ]
  },
  "assert": {
    "reply_min_len": 120,
    "reply_not_contains": [
      "I couldn't reach the AI service",
      "router_verify_failed",
      "router_no_route",
      "pick an account",
      "paste an id",
      "confirm the account"
    ]
  }
}

