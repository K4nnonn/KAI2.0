{
  "id": "PLAN_PERF_STABLE_30D_SINGLE_WINDOW",
  "pillar": "quality",
  "kind": "plan_and_run",
  "capabilities": ["planner", "performance", "sa360_parity", "sa360_accuracy", "date_ranges"],
  "request": {
    "message": "Give me performance for the last 30 days (single window only).",
    "customer_ids": ["${TARGET_CUSTOMER_ID}"],
    "default_date_range": "${STABLE_LAST_30_DAYS}",
    "include_previous": false,
    "session_id": "${SESSION_ID}"
  },
  "expect": {
    "executed": true,
    "result.mode": "performance"
  },
  "assert": {
    "sa360_parity": {
      "source": "current_live",
      "compare_previous": false,
      "metrics": ["impressions", "clicks", "cost", "conversions", "ctr", "cpc"],
      "abs_tolerance": {
        "impressions": 1,
        "clicks": 1,
        "cost": 1.0,
        "conversions": 1,
        "ctr": 0.05,
        "cpc": 0.05
      }
    },
    "sa360_accuracy": {
      "source": "current_live",
      "compare_previous": false,
      "metrics": ["impressions", "clicks", "cost", "conversions", "ctr", "cpc"],
      "require_report_names_echo": true,
      "require_source_frame_in_reports": true,
      "require_metric_presence": true
    }
  }
}

