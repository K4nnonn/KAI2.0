{
  "id": "PLAN_PERF_DATE_PARSE_LAST_30_DAYS",
  "scenario": "Date parsing: 'last 30 days' yields an explicit window (NLU coverage, no parity gate)",
  "pillar": "intent",
  "kind": "plan_and_run",
  "capabilities": ["performance"],
  "request": {
    "message": "give me last 30 days performance",
    "customer_ids": ["${TARGET_CUSTOMER_ID}"],
    "default_date_range": "LAST_7_DAYS",
    "session_id": "${SESSION_ID}"
  },
  "expect": {
    "executed": true,
    "result.mode": "performance"
  },
  "assert": {
    "text_contains": {
      "plan.date_range": [","]
    },
    "text_not_contains": {
      "summary": [
        "No date specified; defaulting to",
        "LAST_7_DAYS"
      ]
    }
  }
}

